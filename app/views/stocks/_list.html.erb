<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if @user == current_user %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.ticker %></td>
        <td><%= stock.last_price %></td>
        <% if @user == current_user %>
          <td>
            <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe,
              user_stock_path(stock),method: :delete, class: 'badge badge-danger', 
              data: { confirm: ' Are you sure?'} %>
          </td>
        <% end %>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td><strong>showing:</strong></td>
      <td><%= @user_stocks.size %></td>
    </tr>
  </tbody>
</table>
